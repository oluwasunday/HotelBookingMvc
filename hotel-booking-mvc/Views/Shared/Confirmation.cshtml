
@{ 
    var message = ViewData["Message"];
    Layout = "_AuthLayout";
}
<div class="container-fluid mt-5" style="background: #F6FCFF;">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="col-sm-10 col-md-10 col-lg-10 mx-auto mb-5">

            <div class="card border-0" 
                 style="background: white;
                    box-shadow: rgba(0, 0, 0, 0.04) 0px 3px 5px;
                    padding:20px 0 !important;
                    height: 65vh";
            >
                <div class="d-flex justify-content-center circle-rounded mb-1">
                    <img src="/images/Success-removebg.png" style="width: 200px; height: 200px; margin-bottom:20px;" alt="401 Image;">
                </div>
                <div class="card-body text-center">
                    <h5 class="card-text bold-font-p text-center w-100 ">@message </h5>
                </div>

                <div class="d-flex align-items-center justify-content-center mb-1">
                    <a href="/LandingView/Index" class="btn blue__bg text-light" style="font-size: 1em; background-color: #2067A1;">
                        Home
                    </a>
                </div>
            </div>
            
        </div>
    </div>
</div>
